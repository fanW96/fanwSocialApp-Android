<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context=".activity.EssayPhotoDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/essay_photo_detail_toolbar"
        style="@style/action_bar"
        android:fitsSystemWindows="false"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="@string/photo_news"/>

    <com.fanw.fanwsocialapp.widget.PhotoViewPager
        android:id="@+id/essay_photo_detail_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/essay_photo_detail_toolbar"
        android:background="@color/black" />

</RelativeLayout>
