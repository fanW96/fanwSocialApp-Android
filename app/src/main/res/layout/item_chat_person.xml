<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/news_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/item_background"
    app:cardElevation="2dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <com.fanw.fanwsocialapp.widget.CircleImageView
                android:id="@+id/chat_person_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/alpha_05_black"
                android:src="@drawable/avatar"/>
                <TextView
                    android:id="@+id/chat_person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40dp"
                    android:text="fanw"
                    android:layout_toRightOf="@id/chat_person_head"
                    android:layout_centerVertical="true"/>

        </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>
